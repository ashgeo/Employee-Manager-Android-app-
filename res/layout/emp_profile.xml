<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#778899"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/smsph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/callhomephno"
        android:layout_below="@+id/callhomephno"
        android:layout_marginTop="16dp"
        android:text="Message" />

    <TextView
        android:id="@+id/smsphno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/smsph"
        android:layout_below="@+id/smsph"
        android:text="not available" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/smsphno"
        android:layout_below="@+id/smsphno"
        android:layout_marginTop="16dp"
        android:text="Email" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/email"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp"
        android:src="@android:drawable/sym_action_chat" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignTop="@+id/email"
        android:src="@android:drawable/sym_action_email" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/officephno"
        android:layout_alignRight="@+id/imageView2"
        android:src="@android:drawable/sym_call_outgoing" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignTop="@+id/homeph"
        android:src="@android:drawable/sym_call_outgoing" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignTop="@+id/mobileph"
        android:src="@android:drawable/sym_call_outgoing" />

    <TextView
        android:id="@+id/emaile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mobilephno"
        android:layout_below="@+id/email"
        android:text="not available" />

    <TextView
        android:id="@+id/mobilephno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView5"
        android:layout_alignLeft="@+id/mobileph"
        android:layout_marginBottom="26dp"
        android:text="not available" />

    <TextView
        android:id="@+id/callhomephno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/homeph"
        android:layout_marginLeft="28dp"
        android:text="not available" />

    <TextView
        android:id="@+id/homeph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mobilephno"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="185dp"
        android:text="Call Home" />

    <TextView
        android:id="@+id/mobileph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mobilephno"
        android:layout_alignLeft="@+id/callhomephno"
        android:text="Hand Phone" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/officephno"
        android:layout_alignLeft="@+id/mobileph"
        android:text="Call Office" />

    <TextView
        android:id="@+id/officephno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mobileph"
        android:layout_alignLeft="@+id/textView1"
        android:layout_marginBottom="15dp"
        android:text="not available" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#5a6c74" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ecode"
            android:layout_centerVertical="true"
            android:text="TextView" />

        <TextView
            android:id="@+id/ecode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/imageView1"
            android:text="TextView" />

        <TextView
            android:id="@+id/jobtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ecode"
            android:layout_below="@+id/imageView1"
            android:text="TextView" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:src="@android:drawable/ic_menu_edit" />
    </RelativeLayout>

</RelativeLayout>